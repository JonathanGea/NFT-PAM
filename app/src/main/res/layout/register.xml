<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="-25dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />
    <EditText
        android:id="@+id/TextUsername"
        android:layout_width="251dp"
        android:layout_marginStart="80dp"
        android:layout_height="wrap_content"
        android:autofillHints="Username"
        android:hint="@string/user"
        android:inputType="text"
        android:textSize="15pt" />



    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:autofillHints="Password"
        android:hint="@string/sandi"
        android:inputType="textPassword"
        android:textSize="15pt" />

    <EditText
        android:id="@+id/TextCPassword"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:autofillHints="ConfirmPassword"
        android:hint="@string/sandic"
        android:inputType="textPassword"
        android:textSize="15pt" />


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="register"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="412dp"
        android:onClick="register"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:textSize="12dp"
        android:text="@string/akun1" />

    <TextView android:id="@+id/buttonregister1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        android:onClick="login3"
        android:text="login"
        android:textColor="#FF03DAC5"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="412dp"/>
</LinearLayout>